<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HackathonCST"
        tools:targetApi="31">
        <activity
            android:name=".ui.GameStatsActivity"
            android:exported="false"
            android:label="@string/title_activity_game_stats"
            android:theme="@style/Theme.HackathonCST" />
        <activity
            android:name=".ui.QuizActivity"
            android:exported="false"
            android:label="@string/title_activity_quiz"
            android:theme="@style/Theme.HackathonCST" />
        <activity
            android:name=".ui.GameActivity"
            android:exported="false"
            android:label="@string/title_activity_game"
            android:theme="@style/Theme.HackathonCST" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.HackathonCST" />
        <activity
            android:name=".ui.AuthenticateActivity"
            android:exported="true"
            android:theme="@style/Theme.HackathonCST">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>